{
  "name": "elite-journal",
  "productName": "Elite Journal",
  "version": "1.13.0",
  "description": "Parsing the elite dangerous journal and putting it in a cool format!",
  "license": "MIT",
  "private": true,
  "repository": "willyb321/elite-journal",
  "author": {
    "name": "willyb321",
    "email": "wbwilliam7@gmail.com",
    "url": "tehsuperwilly.tech"
  },
  "scripts": {
    "test": "gulp test",
    "prestart": "gulp && gulp index",
    "start": "set NODE_ENV=development && electron app/",
    "build": "electron-zip-packager . --out=dist --overwrite --platform=win32 --arch=x64 --prune --asar",
    "pack": "gulp index && gulp build:pack",
    "dist": "gulp index && gulp build:dist",
    "release": "gulp index && gulp build:dist",
    "tag": "release-it",
    "lint": "xo",
    "docs": "jsdoc -c ./conf.json",
    "postinstall": "(electron-builder install-app-deps)",
    "deps": "(ncu -au && cd app && ncu -au && cd .. && yarn install)"
  },
  "keywords": [
    "electron-app",
    "electron"
  ],
  "devDependencies": {
    "ava": "^0.21.0",
    "babel-core": "^6.25.0",
    "babel-preset-latest": "^6.24.1",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^19.19.1",
    "electron-compilers": "^5.9.0",
    "gulp": "^3.9.1",
    "gulp-ava": "^0.18.0",
    "gulp-babel": "^7.0.0",
    "gulp-concat": "^2.6.1",
    "gulp-if": "^2.0.2",
    "gulp-inject": "^4.2.0",
    "gulp-sourcemaps": "^2.6.0",
    "gulp-uglify": "^3.0.0",
    "gulp-xo": "^0.15.0",
    "jake": "latest",
    "jsdoc": "^3.5.4",
    "jsdoc-export-default-interop": "^0.3.1",
    "npm-check-updates": "^2.12.1",
    "release-it": "^2.8.5",
    "rimraf": "^2.6.1",
    "spectron": "^3.7.2",
    "xo": "^0.18.2"
  },
  "ava": {},
  "xo": {
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "reporter": "mocha-circleci-reporter",
    "ignores": [
      "tests/*",
      "test.js",
      "gulpfile.babel.js",
      "app/indexbuild.*",
      "docs/scripts/*",
      "docs/scripts/prettify/*"
    ]
  },
  "build": {
    "appId": "com.willyb321.elite-journal",
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "win": {
      "target": [
        "nsis"
      ],
      "publish": [
        "github",
        "bintray"
      ]
    }
  }
}
